{
  "name": "guestify-app",
  "version": "1.0.0",
  "description": "RSVP manager and easy guest control",
  "main": "index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "start:dev": "dotenv -e .env -- ts-node-dev --transpile-only 'src/index.ts' | pino-pretty -C",
    "test": "dotenv -e .env -- jest --runInBand --passWithNoTests",
    "test:unit": "dotenv -e .env -- jest ./test/unit --passWithNoTests",
    "test:integration": "dotenv -e .env -- jest ./test/integration --runInBand --passWithNoTests",
    "test:staged": "npm test",
    "test:push": "dotenv -e .env -- jest --runInBand --passWithNoTests --coverage",
    "lint": "eslint ./src ./test --ext .ts",
    "style": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "husky:prepare": "husky install"
  },
  "_moduleAliases": {
    "@src": "src/",
    "@test": "test/"
  },
  "prisma": {
    "schema": "./src/adapters/repositories/prisma/schema.prisma"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JulioZittei/guestify-app.git"
  },
  "keywords": [
    "guest",
    "control",
    "RSVP",
    "manager",
    "invite",
    "invitation"
  ],
  "author": "Julio Zittei",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JulioZittei/guestify-app/issues"
  },
  "homepage": "https://github.com/JulioZittei/guestify-app#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^3.3.0",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.2",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8",
    "prisma": "^4.16.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/jwt": "^7.1.0",
    "@fastify/static": "^6.10.2",
    "@prisma/client": "^4.16.1",
    "bcrypt": "^5.1.0",
    "config": "^3.3.9",
    "fastify": "^4.18.0",
    "fastify-decorators": "^3.15.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.3",
    "node-cache": "^5.1.2",
    "pino": "^8.14.1"
  }
}
