{
  "compilerOptions": {
    "target": "es2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": [
      "ES2022"
    ],
    "paths": {
      "@": [
        "."
      ],
      "@src/*": [
        "./src/*"
      ],
      "@test/*": [
        "./test/*"
      ],
    },
    "rootDirs": [
      ".",
      "./src",
      "./test"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "dist",
  ],
}